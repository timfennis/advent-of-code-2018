lines := read_file("input/1").lines();
nums := [];

len := lines.len();

idx := sum := 0;

while idx < len {
  // The `int` function accepts a '+' sign as part of the input string
  lines[idx] = int(lines[idx]);
  sum += lines[idx];
  nums.push(sum);
  idx += 1;
}

print("Part 1: ", sum);

fn loop() {
  while true {
    sum += lines[idx % len];
    
    if sum in nums { 
      return sum;
    }

    idx += 1;
  }
}

print("Part 2: ", loop());

